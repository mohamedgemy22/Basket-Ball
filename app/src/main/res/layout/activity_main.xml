<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/ddf">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="499dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/team1"
            android:layout_width="180dp"
            android:layout_height="514dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Team1"
    android:textSize="40dp"
    android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20sp"
                android:layout_weight="0"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="40dp" />

            <Button
                android:id="@+id/points1"
                android:layout_width="130dp"
                android:layout_height="0dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_weight="0.5"
                android:onClick="points1"
                android:text="+3 points"
                android:textColor="#070101"
                android:textSize="20sp" />

            <Button
                android:id="@+id/points2"
                android:layout_width="130dp"
                android:layout_height="0dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_weight="0.5"
                android:onClick="points2"
                android:text="+2 points"
                android:textColor="#070101"
                android:textSize="20sp" />

            <Button
                android:id="@+id/points3"
                android:layout_width="130dp"
                android:layout_height="0dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_weight="0.5"
                android:onClick="points3"
                android:text="+1 points"
                android:textColor="#070101"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/team2"
            android:layout_width="165dp"
            android:layout_height="518dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team2"
                android:textSize="40dp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20sp"
                android:layout_weight="0"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="40dp" />

            <Button
                android:id="@+id/points4"
                android:layout_width="130dp"
                android:layout_height="0dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_weight="0.5"
                android:onClick="points4"
                android:text="+3 points"
                android:textColor="#070101"
                android:textSize="20sp" />

            <Button
                android:id="@+id/points5"
                android:layout_width="130dp"
                android:layout_height="0dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_weight="0.5"
                android:onClick="points5"
                android:text="+2 points"
                android:textColor="#070101"
                android:textSize="20sp" />

            <Button
                android:id="@+id/points6"
                android:layout_width="130dp"
                android:layout_height="0dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_weight="0.5"
                android:onClick="points6"
                android:text="+1 points"
                android:textColor="#070101"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:onClick="reseat"
        android:text="Reset"
        android:textColor="#070101"
        android:textSize="30sp" />



</LinearLayout>